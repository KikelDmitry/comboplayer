section.top-slider
	.top-slider__container.container-xl
		each slide, idx in slides
			.top-slide(style="background-color:" + slide.color)
				.top-slide__poster(style="background-image: url(/img/content/banners/slide" + idx + ".png)")
					.top-slide__description !{slide.descr}
					//- img(src="/img/content/banners/slide" + idx + ".png")
				.top-slide__title
					.top-slide__title-text #{slide.title}
					.top-slide__tags
						each tag in slide.tags
							.top-slide__tag(class="top-slide__tag--" + tag.type) #{tag.text}
