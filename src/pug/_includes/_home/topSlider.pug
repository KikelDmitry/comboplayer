		{
			title: 'Телевидение онлайн',
			descr: 'Достаточно просто установить <strong>ComboPlayer</strong>, никаких настроек и поиска кодеков не потребуется — все необходимое устанавливается автоматически вместе с программой.',
			tags: [
				{
					type: 'new',
					text: 'Новинка',
				},
				{
					type: 'premiere',
					text: 'Премьера',
				},				
				{
					type: 'rated',
					text: '18+',
				},
			],
			gradient: 'linear-gradient(231.13deg, rgba(65, 138, 253, 0.5) 0%, rgba(33, 68, 133, 0.5) 72.31%), #418AFD;',
		},
		{
			title: 'Майор Гном',
			tags: [
				{
					type: 'new',
					text: 'Новинка',
				},
				{
					type: 'premiere',
					text: 'Премьера',
				},
				{
					type: 'free',
					text: 'Бесплатно',
				},
			],
			gradient: 'linear-gradient(231.13deg, rgba(255, 255, 255, 0.15) 0%, rgba(0, 0, 0, 0.15) 72.31%), #E13928;',
		},
		{
			title: 'Следствие вели...',
			tags: [
				{
					type: 'new',
					text: 'Новинка',
				},
				{
					type: 'premiere',
					text: 'Премьера',
				},				
				{
					type: 'rated',
					text: '18+',
				},
			],
				gradient: 'linear-gradient(231.13deg, rgba(255, 255, 255, 0.15) 0%, rgba(0, 0, 0, 0.15) 72.31%), #1A292E;',
		},
	]

section.top-slider
	.top-slider__container.owl-carousel
		each slide, idx in slides
			.container-xl.top-slide
				a.top-slide__inner(style="--gradient:" + slide.gradient href="#")
					.top-slide__poster
						.top-slide__description !{slide.descr}
						img.top-slide__poster-img(src="/img/content/banners/slide" + idx + ".png" alt=slide.title)
					.top-slide__title
						.top-slide__title-text #{slide.title}
						.top-slide__tags
							each tag in slide.tags
								.top-slide__tag(class="top-slide__tag--" + tag.type) #{tag.text}
	noscript.no-js-msg #{globalData.nojs}
	//- button(type="button" aria-label="Предыдущий элемент").slider-nav.slider-nav--left
		i.icon-caret-down
	//- button(type="button" aria-label="Следующий элемент").slider-nav.slider-nav--right
		i.icon-caret-down