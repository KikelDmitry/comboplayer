section.movies-slider
	.container-xl
		h2.movies-slider__title.title-1 #{data.title}
		.movies-slider__body.items-carousels.owl-carousel
			each movie in movies
				.movie-item
					.movie-item__inner
						.movie-item__poster
							img(src="/img/content/movies/" + movie.poster alt=movie.title + " постер")
							.movie-item__overlay
								.movie-item__actions
									a.movie-item__actions-item(href="#buy-link")
										i.icon-ruble
										span #{data.actions.buy}
									a.movie-item__actions-item(href="#subscription-link")
										i.icon-play-plus
										span #{data.actions.subs}
						.movie-item__badge 
							each badge in movie.badges
								span.movie-item__badge-item #{badge}
						.movie-item__rating
							.movie-item__rating-icon
								i.icon-kinopoisk-logo
							.movie-item__rating-value #{movie.rating}
						h3.movie-item__title #{movie.title}
