.auth-block
	header.auth-block__header.nav
		a.auth-block__header-item.active(href="#sign-in" data-toggle="tab") Вход
		a.auth-block__header-item(href="#sign-up" data-toggle="tab") Регистрация 
	.auth-block__body.tab-content
		#sign-in.tab-pane.active
			include formSignIn.pug
		#sign-up.tab-pane.fade 
			include formSignUp.pug