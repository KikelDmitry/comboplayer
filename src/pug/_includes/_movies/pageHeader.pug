	var categories = [
		{
			title: 'Фильмы',
			link: '#',
			id: 'movie',
		},
		{
			title: 'Сериалы',
			link: '#',
			id: 'series',
		},
		{
			title: 'Мультфильмы',
			link: '#',
			id: 'news',
		},
		{
			title: 'Передачи',
			link: '#',
			id: '',
		},
		{
			title: 'Подборки',
			link: '#',
