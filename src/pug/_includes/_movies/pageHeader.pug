		},
	]
-
	var filters = [
		'по году выхода',
		'по названию',
		'еще как-нибудь',
	]
.post-header.movies-header.video-categories
	.container-xl
		.row.align-items-end
			.col.col-lg-9
				.category-list
					each cat, idx in categories
						a.category-list__item(class="category-list__item--" + cat.id href=cat.link class=(cat.title == activeCat ? 'is-active' : '')) #{cat.title}
				h1.post-header__title.title-1 Смотреть фильмы онлайн
				//- .categories-list.owl-carousel
					each cat in categories
						.categories-list__item(class="categories-list__item--" + cat.id)
							label.categories-list__label
								input.categories-list__input(type="checkbox" name=cat.id id=cat.id)
								span.categories-list__view
									span.categories-list__title #{cat.title}
			.col.col-lg-3
				.items-sort
					.items-sort__title Сортировать
					.items-sort__body
						.sort-dropdown.items-sort__dropdown.dropdown
							button.sort-dropdown__title.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{filters[0]}
							ul.sort-dropdown__list.dropdown-menu
								each filter in filters
									li.sort-dropdown__item
										a.sort-dropdown__link(href="#") #{filter} 
						button.items-sort__dir(type="button" aria-label="Направление сортировки")
							i.icon-sort-dir
