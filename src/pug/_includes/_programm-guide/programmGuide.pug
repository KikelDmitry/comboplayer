section.programm-guide
	.container-xl
		.row.flex-column-reverse.flex-lg-row
			.col-lg-9
				.programm-lists
					each channel, idx in programmChannels
						.programm-channel
							.programm-channel__header(data-toggle="collapse" data-target="#programm-channel__body" + idx aria-expanded="false" aria-role="button" class=(idx != 0 ? 'collapsed' : ''))
								.programm-channel__logo
									img.programm-channel__logo-img(src="img/content/channels/" + channel.icon, alt=channel.channel + " logo")
								a.programm-channel__title(href="#") #{channel.channel}
								a.programm-channel__to-player(href="player.html" title="Перейти к каналу")
									i.icon-play 
								button.programm-channel__fav.fav-btn(type="button" title="Добавить в избранное")
									i.icon-heart-empty
									i.icon-heart-solid
								i.programm-channel__header-arrow.icon-caret-up
							.programm-channel__body.collapse(id="programm-channel__body" + idx class=(idx == 0 ? 'show' : ''))
								each day, idx in channel.days
									.programm-day
										.programm-day__title #{day.title}
										ul.programm-day__list
											each item in day.hours

												+programmItem(
													'future',
													'',
													item.time,
													'Сказочный патруль',
													item.descr,
													item.series
												)



				.programm-guide__about.about-channel
					include aboutProgramm.pug
			.col-lg-3
				.programm-guide__tags
					each tag in tags
						.programm-tag(class="programm-tag--" + tag.class)
							span.programm-tag__title #{tag.title}
				.programm-guide__adv.channel-guide__adv.d-none.d-lg-flex AD
		.row
			.col-lg-9