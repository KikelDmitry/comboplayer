-
	var screens = [
		'movie0.jpg',
		'movie1.png',
		'movie2.png',
		'movie0.jpg',
		'movie1.png',
		'movie2.png',
	];


.modal.fade#modal-gallery(tabindex="-1")
	.modal-dialog.movie-modal
		.modal-content
			.modal-body
				.carousel.slide#movie-carousel
					.carousel-inner
						each scr in screens
							.carousel-item.active
								img(src="img/content/screenshots/" + scr alt="movie screenshot")
						a.carousel-control-prev(href="#movie-carousel" role="button" data-slide="prev")
							span.carousel-control-prev-icon(aria-hidden="true")
							span.sr-only Previous
						a.carousel-control-next(href="#movie-carousel" role="button" data-slide="next")
							span.carousel-control-next-icon(aria-hidden="true")
							span.sr-only Next