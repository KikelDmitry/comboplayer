.filters-management.post-header
	.container-xl
		.row.flex-column.flex-sm-row.justify-content-sm-between.align-center
			.col-auto.pr-0
				h2.filters-management__title.title-1 Программа передач на сейчас
			.col-auto.pl-0
				.filters-management__controls
					button.channel-favorite.fav-btn(type="button")
						span.channel-favorite__icon
							i.icon-heart-empty
							i.icon-heart-solid
						span.channel-favorite__title Избранное
					.channels-dropdown.dropdown
						button.channels-dropdown__btn.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
							i.icon-tv-icon
							span.channels-dropdown__btn-title Все каналы
						ul.channels-dropdown__list.dropdown-menu
							each channel in channels
								li.channels-dropdown__item
									a.channels-dropdown__link(href="#") #{channel}
					.city-dropdown.dropdown
						button.city-dropdown__btn(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
							i.icon-location
							span.city-dropdown__btn-title Москва
						.city-dropdown__menu.dropdown-menu
							form.city-dropdown__form
								input.city-dropdown__form-input(type="text" name="city" placeholder="Другой город...")
								button.city-dropdown__form-submit(type="submit" aria-label="Поиск" title="Искать")
									i.icon-zoom
							a.city-dropdown__link(href="cities.html")
								span Все города
								i.icon-caret-up
							ul.city-dropdown__city-list.city-droplist
								each city in cities
									li.city-droplist__item
										a.city-droplist__link(href="#")
											span.city-droplist__city #{city.title}
											span.city-droplist__county (#{city.descr})